{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types", "./types"],
      "types": ["node"]
     
    },
    "include": [ "src/**/*"],
    "exclude": ["node_modules"]
  }